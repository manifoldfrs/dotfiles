---
layout: none
---
[
    {% for post in site.posts %
    }
    {
        "title": "{{ post.title | escape }}",
        "category": "{{ post.categories | join: ', ' }}",
        "tags": "{{ post.tags | join: ', ' }}",
        "url": "{{ site.baseurl }}{{ post.url }}",
        "date": "{{ post.date | date_to_string }}",
        "excerpt": "{{ post.excerpt | strip_html | strip_newlines | truncatewords: 50 | escape }}"
    }{% unless forloop.last %
    },
    {% endunless %
    }
  {% endfor %
    }
  {% if site.posts.size > 0 and site.pages.size > 0 %
    },
    {% endif %
    }
  {% for page in site.pages %
    }
    {% if page.title and page.layout != 'home' and page.url != '/search/' and page.url != '/blog/' and page.url != '/categories/' and page.url != '/archive/' and page.url != '/portfolio/' %
    }
    {
        "title": "{{ page.title | escape }}",
        "category": "{{ page.categories | join: ', ' }}",
        "tags": "{{ page.tags | join: ', ' }}",
        "url": "{{ site.baseurl }}{{ page.url }}",
        "date": "{{ page.date | date_to_string }}",
        "excerpt": "{{ page.content | strip_html | strip_newlines | truncatewords: 50 | escape }}"
    }{% unless forloop.last %
    },
    {% endunless %
    }
    {% endif %
    }
  {% endfor %
    }
]