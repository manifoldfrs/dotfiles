{
  // Editor Core Settings
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlineSuggest.enabled": true,
  "editor.lightbulb.enabled": "off",
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "editor.accessibilitySupport": "off",
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit",
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "editor.quickSuggestions": {
	"strings": "on"
  },

  // Window & Workbench
  "window.zoomLevel": 0.8,
  "window.title": "${activeEditorLong}${separator}${rootName}",
  "workbench.colorTheme": "Default Dark+",
  "workbench.editor.enablePreview": true,

  // JavaScript/TypeScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "on",

  // Git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "git.ignoreRebaseWarning": true,

  // Prettier
  "prettier.endOfLine": "auto",
  "prettier.singleAttributePerLine": true,
  "prettier.trailingComma": "none",
  "prettier.withNodeModules": false,
  "prettier.printWidth": 1000,

  // Python
  "[python]": {
    "editor.formatOnType": true
  },
  "python.diagnostics.sourceMapsEnabled": true,
  "python.createEnvironment.trigger": "off",

  // Search & Explorer
  "explorer.confirmDragAndDrop": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/*.log": true,
    "**/package-lock.json": true
  },

  // Color Highlighting
  "color-highlight.matchHslWithNoFunction": true,
  "color-highlight.matchRgbWithNoFunction": true,
  "color-highlight.matchWords": true,
  "color-highlight.markerType": "dot-after",

  // Cursor-specific Settings
  "cursor.cpp.disabledLanguages": ["scminput"],
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.composer.renderPillsInsteadOfBlocks": true,
  "cursor.composer.collapsePaneInputBoxPills": true,
  "cursor.terminal.usePreviewBox": true,
  "cursor.general.enableShadowWorkspace": true,

  // Misc
  "extensions.ignoreRecommendations": true,
  "debug.onTaskErrors": "debugAnyway",
  "diffEditor.ignoreTrimWhitespace": true,
  "json.schemaDownload.enable": false,
  "task.allowAutomaticTasks": "on"
}