---
layout: none
---
[
    {% for post in site.posts %
    }
    {
        "title": "{{ post.title | escape | replace: "\"",
        "\\\""
    }
}","category": "{
    { post.categories | join: ', ' | escape | replace: "\"",
        "\\\""
    }
}","tags": "{
    { post.tags | join: ', ' | escape | replace: "\"",
        "\\\""
    }
}","url": "{
    { site.baseurl
    }
}{
    { post.url
    }
}","date": "{{ post.date | date_to_string }}",
"excerpt": "{{ post.excerpt | strip_html | strip_newlines | truncatewords: 50 | escape | replace: "\"",
"\\\"" | replace: "\n",
" " | replace: "\r",
" "
}
}"
}{% unless forloop.last %
},
{% endunless %
}
  {% endfor %
}{% if site.posts.size > 0 and site.pages.size > 0 and site.pages | where_exp: "page",
"page.title and page.layout != 'home' and page.url != '/search/' and page.url != '/blog/' and page.url != '/categories/' and page.url != '/archive/' and page.url != '/portfolio/'" | size > 0 %
},
{% endif %
}
  {% assign page_items = "" %
}
  {% for page in site.pages %
}
    {% if page.title and page.layout != 'home' and page.url != '/search/' and page.url != '/blog/' and page.url != '/categories/' and page.url != '/archive/' and page.url != '/portfolio/' %
}
      {% assign page_json = '{
"title": "' | append: page.title | escape | replace: "\"",
"\\\"" | append: '","category": "' | append: page.categories | join: ', ' | escape | replace: "\"",
"\\\"" | append: '","tags": "' | append: page.tags | join: ', ' | escape | replace: "\"",
"\\\"" | append: '","url": "' | append: site.baseurl | append: page.url | append: '","date": "' | append: page.date | date_to_string | append: '",
"excerpt": "' | append: page.content | strip_html | strip_newlines | truncatewords: 50 | escape | replace: "\"",
"\\\"" | replace: "\n",
" " | replace: "\r",
" " | append: '"
}' %
}
      {% assign page_items = page_items | append: page_json | append: "," %
}
    {% endif %
}
  {% endfor %
}
  {
{ page_items | remove_last: ","
}
}
]