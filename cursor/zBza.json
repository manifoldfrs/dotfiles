{
    "name": "sully-prep",
    "version": "1.0.0",
    "description": "Celestial objects closest pair analysis",
    "main": "sully.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:unit": "jest sully.test.ts",
        "test:stress": "jest sully.stress.test.ts",
        "test:verbose": "jest --verbose"
    },
    "devDependencies": {
        "@types/jest": "^29.5.5",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.ts",
            "**/*.test.ts"
        ],
        "collectCoverageFrom": [
            "sully.ts"
        ]
    }
}
