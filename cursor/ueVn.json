{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": "src"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "build"]
}
