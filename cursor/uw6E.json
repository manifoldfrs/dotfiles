{
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node"
  },
  "include": [
    "ch15_local_typescript/**/*"
  ]
}
