---
layout: none
---
[
    {% assign first = true %
    }
{% for post in site.posts %
    }
  {% unless post.draft %
    }
    {% unless first %
    },
    {% endunless %
    }
    {
        "title": "{{ post.title | escape | replace: '"', '&#34;'
    }
}","categories": "{{ post.categories | join: ', ' | escape }}",
"tags": "{{ post.tags | join: ', ' | escape }}",
"url": "{{ site.baseurl }}{{ post.url }}",
"date": "{{ post.date | date_to_string }}",
"excerpt": "{{ post.excerpt | strip_html | strip_newlines | truncatewords: 50 | escape }}"
}
    {% assign first = false %
}
  {% endunless %
}
{% endfor %
}
{% for page in site.pages %
}
  {% if page.title and page.layout != 'home' and page.url != '/search/' and page.url != '/blog/' and page.url != '/archive/' and page.url != '/categories/' and page.url != '/portfolio/' and page.url != '/404.html' and page.name != 'feed.xml' and page.name != 'sitemap.xml' and page.name != 'search.json' %
}
    {% unless first %
},
{% endunless %
}
    {
"title": "{{ page.title | escape | replace: '"', '&#34;'
}
}","categories": "{{ page.categories | join: ', ' | escape }}",
"tags": "{{ page.tags | join: ', ' | escape }}",
"url": "{{ site.baseurl }}{{ page.url }}",
"date": "{{ page.date | date_to_string }}",
"excerpt": "{{ page.content | strip_html | strip_newlines | truncatewords: 50 | escape }}"
}
    {% assign first = false %
}
  {% endif %
}
{% endfor %
}
]