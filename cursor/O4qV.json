{
  "name": "shaya",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "workspace": {
    "nohoist": [
      "**"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "scripts": {
    "infra": "./packages/infra/bin/cli.js",
    "deploy": "concurrently \"yarn deploy:server\" \"yarn deploy:app\"",
    "docker:build": "docker compose build",
    "test": "npx turbo run test",
    "docker:start": "docker compose up --attach api --attach tapestry",
    "start": "yarn docker:start",
    "ngrok:start": "ngrok start api --config ngrok.yml",
    "build": "npx turbo run build",
    "build:watch": "npx turbo run build:watch --concurrency=99",
    "prepare": "husky install",
    "remove": "rm -rf node_modules/ packages/*/node_modules packages/*/lib packages/*/dist",
    "cleanup": "pkill -f \"redis-server\" || true; pkill -f \"prisma/build/child\" || true; pkill -f \"turbo.*daemon\" || true"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "prettier": "3.0.3",
    "prisma": "^5.19.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.4",
    "typescript": "^5.6.3"
  },
  "packageManager": "yarn@4.6.0",
  "dependencies": {
    "pretty-cache-header": "^1.0.0"
  }
}